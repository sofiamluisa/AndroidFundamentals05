<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009"
        app:srcCompat="@drawable/header_image" />

    <TextView
        android:id="@+id/textViewHoliday"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginBottom="21dp"
        android:text="@string/happy_holidays"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNameFrom"
        app:layout_constraintStart_toEndOf="@+id/imageViewPoster" />

    <TextView
        android:id="@+id/textViewNameFrom"
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="@string/from_luisa"
        app:layout_constraintStart_toStartOf="@+id/textViewHoliday"
        app:layout_constraintTop_toBottomOf="@+id/headerImage" />

    <ImageView
        android:id="@+id/imageViewPoster"
        android:layout_width="147dp"
        android:layout_height="174dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNameFrom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/poster_sparkling" />

    <TextView
        android:id="@+id/textViewChristmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/merry_christmas"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPoster"
        tools:layout_editor_absoluteX="11dp" />

    <Button
        android:id="@+id/buttonSnow"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/pink"
        android:text="@string/let_it_snow"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/buttonBells"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChristmas" />

    <Button
        android:id="@+id/buttonBells"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@color/pink"
        android:text="@string/gingles_bells"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChristmas" />

</androidx.constraintlayout.widget.ConstraintLayout>