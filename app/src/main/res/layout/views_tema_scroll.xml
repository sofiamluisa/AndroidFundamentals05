<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/extra_small_padding"
        android:scrollbarSize="@dimen/large_space">


        <TextView
            android:id="@+id/textViewAccentColor"
            android:layout_width="@dimen/large_space"
            android:layout_height="@dimen/large_space"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="125dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewGreen"
            android:layout_width="@dimen/large_space"
            android:layout_height="@dimen/large_space"
            android:layout_toStartOf="@+id/textViewAccentColor"
            android:background="@color/green" />

        <TextView
            android:id="@+id/textViewYellow"
            android:layout_width="@dimen/large_space"
            android:layout_height="@dimen/large_space"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/textViewOrange"
            android:layout_width="@dimen/large_space"
            android:layout_height="@dimen/large_space"
            android:layout_alignParentEnd="true"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGreen"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />


    </RelativeLayout>


</ScrollView>