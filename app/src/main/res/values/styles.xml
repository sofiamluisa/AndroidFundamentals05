<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WhiteTextAndMarginTop">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="WhiteTextMarginTopAndBigFontSize" parent="WhiteTextAndMarginTop">
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

</resources>
